# vim
alias vim=nvim
alias vi=nvim
alias ovim="\vim"
alias vimdiff="nvim -d"

# todo
alias t=todo.sh

# open
alias open=xdg-open

# clipboard
alias pbcopy='xsel -i -b'
alias pbpaste='xsel -b'

alias netctl='sudo netctl'

for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
    alias "$method"="curl -X \"$method\""
done

# history
alias history='fc -l 1'

# ls
alias ls='ls -F'
