# muttrc -----------------------------------------------------------------------

# settings ---------------------------------------------------------------------
set folder               = ~/mail
set alias_file           = ~/.mutt/alias
set header_cache         = ~/.mutt/cache/headers
set message_cachedir     = ~/.mutt/cache/bodies
set certificate_file     = ~/.mutt/certificates
set mailcap_path         = ~/.mutt/mailcap
set tmpdir               = ~/.mutt/temp
set signature            = ~/.mutt/sig

set realname             = "Kim Nørgaard"
set from                 = "kn@netic.dk"
set envelope_from
alternates jasen@jasen.dk kk@jasen.dk junk@jasen.dk

mailboxes +netic/INBOX
mailboxes +netic/Sent
mailboxes +netic/Drafts
mailboxes +netic/JIRA
mailboxes +netic/Alerts
mailboxes +netic/Trash
mailboxes +temporary/search

set postponed            = "+netic/Drafts"
set record               = "+netic/Sent"
set spoolfile            = "+netic/INBOX"
set trash                = "+netic/Trash"
set mbox_type            = Maildir

set askcc
set date_format          = "%d-%m-%y"
set delete                                          # don't ask on delete
set edit_headers                                    # show headers on edit
set editor               = "vim"
set fast_reply                                      # skip to compose when replying
set forward_format       = "Fwd: %s"
set forward_quote                                   # include message in forwards
set include                                         # include message in replies
# %Z     a three  character  set  of  message  status  flags.
# %D     date and time of the message - local time ($date_format)
# %F     author name, or recipient name if the message is from you
# %s     subject of the message
set index_format         = "%Z %D %-20.20F %s"
set mail_check           = 0
set menu_scroll
set mime_forward
set pager_context        = 3                        # number of context lines to show
set pager_index_lines    = 8                        # number of index lines to show
set pager_stop                                      # don't go to next message automatically
set pipe_decode                                     # strip headers and eval mimes when piping
set query_command        = "khard email --search-in-source-files --parsable '%s'"
set quit                                            # don't ask on quit
set quote_regexp         = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
set reply_regexp         = "^(([RrSs][EeVv]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
set reply_to                                        # reply to Reply to: field
set reverse_name                                    # reply as whomever it was to
set sendmail             = "/usr/bin/msmtp"
set sidebar_divider_char = '  │'
set sidebar_visible      = no
set sidebar_width        = 24
set sort                 = threads
set sort_aux             = reverse-last-date-received
set status_chars         = " *%A"
set status_format        = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"
set text_flowed                                     # add format=flowed to content-type
set tilde                                           # show tildes like in vim
set timeout              = 3                        # network timeout
set uncollapse_jump                                 # jump to next unread message
                                                    # when current thread is uncollapsed
set wait_key             = no                       # don't wait for keypress
set wrap                 = 80
unset help                                          # don't show help bar on top
unset markers                                       # no plus signs

ignore *
unignore from: to: cc: date: subject:
unhdr_order *
hdr_order from: subject: to: cc: date:

auto_view text/html
alternative_order text/plain text/enriched text/html

# bindings ---------------------------------------------------------------------
bind index       gg         first-entry
bind index       G          last-entry
bind index       R          group-reply
bind index       <tab>      sync-mailbox
bind index       <space>    collapse-thread
bind index,pager <down>     sidebar-next
bind index,pager <up>       sidebar-prev
bind index,pager <right>    sidebar-open
bind index,pager B          sidebar-toggle-visible
bind pager       k          previous-line
bind pager       j          next-line
bind pager       gg         top
bind pager       G          bottom
bind pager       R          group-reply
bind attach      <return>   view-mailcap
bind editor      <Tab>      complete-query
bind editor      ^T         complete


# macros -----------------------------------------------------------------------
macro index,pager  H  ":toggle help<enter>"
macro index        O  "<shell-escape>systemctl --user start mbsync<enter>"
macro index        C  "<copy-message>?<toggle-mailboxes>"
macro index        M  "<save-message>?<toggle-mailboxes>"
macro index        S  "<enter-command>unset wait_key<enter><shell-escape>~/.mutt/mutt-notmuch-py ~/mail/temporary/search<enter><change-folder-readonly>+temporary/search<enter>"


# basic colors -----------------------------------------------------------------
color normal       white           default
color error        red             default
color tilde        black           default
color message      cyan            default
color markers      red             white
color attachment   blue            default
color search       brightmagenta   default
color status       color248        color236
color indicator    white           color54
color tree         color96         default

# basic mono colors ------------------------------------------------------------
mono  bold         bold
mono  underline    underline
mono  indicator    reverse
mono  error        bold

# index ------------------------------------------------------------------------
color index        color243        default   "~A"
color index        brightred       default   "~E"     #  expired messages
color index        cyan            default   "~N"     #  new messages
color index        cyan            default   "~O"     #  old messages
color index        cyan            default   "~U"     #  unread messages
color index        brightyellow    default   "~P"     #  messages from me
color index        red             default   "~F"     #  flagged messages
color index        black           red       "~D"     #  deleted messages
color index        color154        default   "~v"     #  messages part of a collapsed thread

# message headers --------------------------------------------------------------
color hdrdefault   color243        default
color header       color148        default   "^(Subject)"

# message body -----------------------------------------------------------------
color quoted       color93         default
color quoted1      color99         default
color quoted2      color105        default
color quoted3      color111        default
color quoted4      color117        default
color quoted5      color123        default

color signature    brightwhite     default
color bold         black           brightwhite
color underline    black           brightyellow

# pgp --------------------------------------------------------------------------
color body         red             default   "(BAD signature)"
color body         cyan            default   "(Good signature)"
color body         brightblack     default   "^gpg: Good signature.*"
color body         brightyellow    default   "^gpg: "
color body         brightyellow    red       "^gpg: BAD signature from.*"
mono  body         bold                      "^gpg: Good signature"
mono  body         bold                      "^gpg: BAD signature from.*"

# border lines -----------------------------------------------------------------
color body         blue            default   "( *[-+=#*~_]){6,}"

# URLs -------------------------------------------------------------------------
