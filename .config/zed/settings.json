// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_model": {
      // "provider": "zed.dev",
      "provider": "google",
      "model": "gemini-2.5-pro-exp-03-25"
    },
    "version": "2",
    "enable_experimental_live_diffs": true
  },
  "vim_mode": true,
  "ui_font_family": "TX-02",
  "ui_font_size": 14,
  "ui_font_weight": 700,
  "ui_font_features": {
    "calt": false
  },
  "theme": {
    "mode": "system",
    "dark": "Blade Runner 2049 Dark User Imput",
    "light": "Blade Runner 2049 Dark User Imput"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    },
    "line_height": {
      "custom": 1
    }
  },
  // "buffer_font_family": "Iosevka Nerd Font Mono",
  "buffer_font_family": "TX-02",
  "buffer_font_weight": 400,
  "buffer_font_size": 16,
  "buffer_font_features": {
    "calt": false,
    "liga": false,
    "dlig": false,
    "ss06": true
  },
  "buffer_line_height": "standard",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "indent_guides": {
    "enabled": false,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "languages": {
    "YAML": {
      "indent_guides": {
        "enabled": true
      }
    },
    "Markdown": {
      "show_wrap_guides": true
    }
  },
  "lsp": {
    "gopls": {
      "gofumpt": true,
      "initialization_options": {
        "gofumpt": true
      }
    }
  },
  "scrollbar": {
    "show": "auto"
  },
  "show_wrap_guides": false,
  "wrap_guides": [80],
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": false,
    "folder_icons": false,
    "git_status": true,
    "indent_size": 10,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": null
    },
    "indent_guides": {
      "show": "never"
    }
  },
  "language_models": {
    "google": {
      "available_models": [
        {
          "name": "gemini-2.0-flash-exp",
          "display_name": "Gemini 2.0 Flash (Experimental)",
          "max_tokens": 1048576
        }
      ]
    }
  }
}
